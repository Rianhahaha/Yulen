<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/form2"


    >

    <TextView
        android:id="@+id/JudulModalKode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Metode Pembayaran"
        android:padding="20dp"
        android:textAlignment="center"
        android:fontFamily="@font/fredoka"
        android:textSize="25dp"
        android:textColor="@color/Hijau"
        />


    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/form"
        >


        <ImageView
            android:id="@+id/imageView41"
            android:layout_width="56dp"
            android:layout_margin="10dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/dana" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/fredoka"
                android:gravity="start"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:text="@string/dana"
                android:textColor="@color/Hijau"
                android:textSize="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/fredoka"
                android:gravity="start"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:text="Rp.50.000"
                android:textColor="@color/Hijau"
                android:textSize="15dp" />

        </LinearLayout>


        <RadioButton
            android:id="@+id/radioButton"
            android:layout_width="167dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"/>


    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/form"
        >


        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="56dp"
            android:layout_margin="10dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ovo" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/fredoka"
                android:gravity="start"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:text="OVO"
                android:textColor="@color/Hijau"
                android:textSize="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/fredoka"
                android:gravity="start"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:text="Rp.50.000"
                android:textColor="@color/Hijau"
                android:textSize="15dp" />

        </LinearLayout>


        <RadioButton
            android:id="@+id/selectovo"
            android:layout_width="167dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"/>


    </LinearLayout>

    <LinearLayout
        android:layout_margin="10dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/form"
        >


        <ImageView
            android:id="@+id/flip"
            android:layout_width="56dp"
            android:layout_margin="10dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/flip" />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"

            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/fredoka"
                android:gravity="start"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:text="FLIP"
                android:textColor="@color/Hijau"
                android:textSize="30dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/fredoka"
                android:gravity="start"
                android:padding="10dp"
                android:paddingStart="20dp"
                android:text="Rp.50.000"
                android:textColor="@color/Hijau"
                android:textSize="15dp" />

        </LinearLayout>


        <RadioButton
            android:id="@+id/selectflip"
            android:layout_width="167dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"/>


    </LinearLayout>




    <Button
        android:id="@+id/lanjut"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lanjut"
        android:textAllCaps="false"
        android:fontFamily="@font/fredoka"
        android:textSize="30dp"
        android:textColor="@color/white"
        android:background="@drawable/btn"
        android:layout_margin="30dp"
        android:onClick="onClick"
        />


</LinearLayout>